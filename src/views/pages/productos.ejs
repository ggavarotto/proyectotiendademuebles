<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100,300&display=swap" rel="stylesheet">
    <title>Proyecto-Integrador</title>
</head>

<body>

    <nav>
        <!-- <a href="/tienda/"><img src="/imagenes/logo.svg" alt="logo Tienda Mueble"></a> -->
        <a href="/"><img src="/imagenes/logo.svg" alt="logo Tienda Mueble"></a>
        <ul class="menu">
            <li class="item-menu"><a class="item-link" href="/productos">Productos</a></li>
            <li class="item-menu"><a class="item-link" href="/nuevoProducto">Agregar Producto</a></li>
        </ul>
    </nav>
    <main class="cont-padre">

        <% data.forEach((prod)=>{%>

            <div class="card card-prod">
                <h2 class="titulo-prod"> <%=prod.producto%> </h2>
                <img class="img-card img-prod" src="<%=prod.imagen%>" alt=" imagen=producto">
                <p class="desc-card"> <%=prod.descripcion%> </p>
                <p><%= prod.precio%></p>
                <a class="boton-ver" href="#">Comprar</a>
            </div>

        <%})%>


    </main>


</body>

</html>